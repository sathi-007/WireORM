<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/rowBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dotumId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="Sample Id" />

    <TextView
        android:id="@+id/dotumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dotumId"
        android:layout_margin="5dp"
        android:textSize="14dp"
        android:textStyle="italic"
        tools:text="Sample Text" />

    <ImageView
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dotumId"
        android:layout_margin="5dp"
        android:src="@drawable/edit"
        tools:src="@drawable/ic_home" />

    <ImageView
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dotumText"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dotumText"
        android:layout_below="@+id/editBtn"
        android:layout_margin="5dp"
        android:src="@drawable/delete"
        android:visibility="gone"
        tools:src="@drawable/ic_home" />

</RelativeLayout>